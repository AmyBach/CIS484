                    }
                    
                }
               
        }
        
        double expTotal = 0.0;
        
        String expenses = "";
        expenses += "Monthly Expenses: \n";
        for (int i = 0; i < Expense.size(); i++) {
           expenses += Expense.get(i).toString();
           expTotal += Expense.get(i).getAmount();
        }
