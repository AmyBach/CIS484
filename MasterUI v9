    tblcProdSupp.setCellValueFactory(new PropertyValueFactory<Product,Supplier>("supplierName"));
    
    tblcStock.setCellValueFactory(new PropertyValueFactory<Product,Integer>("ProductQuantity")); 
    
    
    
