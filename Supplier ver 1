public class Supplier {

// Variables 

    public String supplierName;

    public String supplierAddress;

    public String supplierPhone;

    private int supplierID;
    
    private static int nextID = 0;
    
    //newly added the ID class
    public ID newsupplierID;

    //Constructor

    public Supplier(String supplierName, String supplierAddress, String supplierPhone)

    {
        this.supplierName = supplierName;

        this.supplierAddress = supplierAddress;

        this.supplierPhone = supplierPhone;

        this.supplierID = nextID++;
        
    }


// Getters/Setters

    
    public String getSupplierName()

    {

        return supplierName;

    }

    public void setSupplierName(String supplierName)

    {

        this.supplierName = supplierName;

    }

    

    public String getSupplierAddress()

    {

        return supplierAddress;

    }

    public void setSupplierAddress(String supplierAddress)

    {

        this.supplierAddress = supplierAddress;

    }

    

    public String getSupplierPhone()

    {

        return supplierPhone;

    }

    public void setSupplierPhone(String supplierPhone)

    {

        this.supplierPhone = supplierPhone;

    }

    

    //getID 

    public int getSupplierID() {

        return this.supplierID;
        
    }

    
    //new added to get supplierID from ID class
    public int getNewSupplierID() {

        return newsupplierID.getIdNumber();

    }

    public String toString()
    {
        return "Phone: " + this.supplierPhone + ", Address: " + this.supplierAddress;
    }

}
